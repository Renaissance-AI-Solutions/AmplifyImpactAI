# WARNING: This is an example file. Create a .env file with your actual secrets and DO NOT commit it to version control.
#          Add .env to your .gitignore file.

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1

# Required Secrets - Generate strong, unique values for production
SECRET_KEY=generate_a_strong_secret_key_here
FERNET_KEY=generate_a_strong_fernet_key_here

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///instance/app.db

# For PostgreSQL in production, uncomment and configure:
# DB_USER=postgres
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=amplify_impact
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# X/Twitter API Configuration
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here
X_CONSUMER_KEY=your_x_consumer_key_here
X_CONSUMER_SECRET=your_x_consumer_secret_here
X_CALLBACK_URL=http://127.0.0.1:5000/accounts/x/callback

# Logging
LOG_TO_STDOUT=True
